<!DOCTYPE html>
<html>
    <head>
        <title>ChatRoom</title>
        <meta name="viewport">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
        <link href="css/styles.css" rel="stylesheet" />
    </head>
    <body>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <span id="chatRoomName" class="navbar-brand mb-0 h1">ChatRoom</span>
                
                <!-- right offcanvas -->
                <button id="members" class="btn btn-info" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight" disabled>Members</button>
                <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
                    <div class="offcanvas-header">
                        <h1 class="offcanvas-title" id="offcanvasRightLabel">Members</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div id="memberArea" class="offcanvas-body"></div>
                </div>
                <!-- right offcanvas -->
            </div>
        </nav>

        <div class="container-fluid">
            <div class="container-fluid chat-area" id="chatArea">
            </div>
                <div class="d-flex">
                    <!-- <div class="btn-group" style="width: 20%;">
                        <button type="button" class="btn btn-secondary">Send to</button>
                        <button type="button" class="btn btn-secondary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="visually-hidden">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item active" href="#">All(default)</a></li>
                            <li><a class="dropdown-item" href="#">Server</a></li>
                            <li><a class="dropdown-item" href="#">Whisper</a></li>
                        </ul>
                    </div> -->
                    <input id="message" class="form-control me-2" placeholder="Type message here" disabled>
                    <button id="send" class="btn btn-dark btn-lg" type="button" disabled>Send</button>
                </div>
            </div>
        </div>

        <!-- toast container -->
        <div id="toastArea" class="toast-container position-fixed bottom-0 end-0 p-3"></div>

<!-- Forms -->

        <!-- Member form -->
        <div id="memberForm" class="info container">
            <span class="h4 mb-0">Nickname</span>
        </div>
        <!-- Member form -->

        <!-- Alert form -->
        <div id="alertForm" class="alert" role="alert" style="text-align: center; display: none;"></div>
        <!-- Alert form -->
  
        <!-- chat form -->
        <div id="chatForm" class="outer" style="display: none;">
            <div class="inner" style="display: inline ;"></div>
        </div>
        <!-- chat form -->
  
        <!-- modal form -->
        <div class="modal fade" id="modalForm" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel"></h1>
                    </div>
                    <div class="modal-body"></div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Confirm</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- modal form -->
  
        <!-- toast form -->
        <div id="toastForm" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-body"></div>
            <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <!-- toast form -->
  
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
        <script type="module" src="js/chatRoom.js"></script>
    </body>
</html>