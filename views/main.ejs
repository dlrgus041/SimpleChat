<html>
    <head>
        <title>Group Chat Client</title>
        <meta name="viewport">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
        <link href="css/styles.css" rel="stylesheet" />
      </head>
    <body>
      <nav class="navbar bg-body-tertiary">
        <div class="container-fluid">
          
          <!-- left offcanvas -->
          <button id="members" class="btn btn-info" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasLeft" aria-controls="offcanvasLeft" disabled>Members</button>
          <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasLeft" aria-labelledby="offcanvasLeftLabel">
            <div class="offcanvas-header">
              <h1 class="offcanvas-title" id="offcanvasRightLabel">Members</h1>
              <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div id="memberArea" class="offcanvas-body">

              <!-- Cicle progress bar-->
              <div id="progress">
                <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
                  <div class="spinner-border" style="width: 10rem; height: 10rem;" role="status">
                    <span class="visually-hidden">Loading...</span>
                  </div>
                </div>
              </div>
              <!-- Cicle progress bar-->

            </div>
          </div>
          <!-- left offcanvas -->

          <div class="d-flex mb-0">
            <span class="navbar-brand mb-0 h1">Group Chat Server</span>
          </div>

          <!-- right offcanvas -->
          <button id="chatRooms" class="btn btn-info" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight" disabled>ChatRooms</button>
          <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
            <div class="offcanvas-header">
              <h1 class="offcanvas-title" id="offcanvasRightLabel">ChatRooms</h1>
              <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div id="chatRoomArea" class="offcanvas-body"></div>
          </div>
          <!-- right offcanvas -->

        </div>
      </nav>

      <div class="container-fluid">
        <div class="container-fluid" id="groupChatArea">
        </div>
        <div class="d-flex">
            <!-- <div class="btn-group" style="width: 20%;">
              <button type="button" class="btn btn-secondary">Send to</button>
              <button type="button" class="btn btn-secondary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                <span class="visually-hidden">Toggle Dropdown</span>
              </button>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item active" href="#">All(default)</a></li>
                <li><a class="dropdown-item" href="#">Server</a></li>
                <li><a class="dropdown-item" href="#">Whisper</a></li>
              </ul>
            </div> -->
            <input id="message" class="form-control me-2" placeholder="Type message here" disabled>
            <button id="send" class="btn btn-dark btn-lg" type="button" disabled>Send</button>
          </div>
        </div>
      </div>

      <!-- toast container -->
      <div id="toastArea" class="toast-container position-fixed bottom-0 end-0 p-5"></div>

<!-- Forms -->

      <!-- Member form -->
      <div id="memberForm" class="info container">
        <div class="row">
          <div class="col">
            <span class="h3 mb-0">Nickname</span>
          </div>
          <div class="col text-center">
            <button class="btn btn-outline-primary" data-bs-dismiss="offcanvas">Invite</button>
            <button class="btn btn-outline-secondary" data-bs-dismiss="offcanvas">Whisper</button>
          </div>
        </div>
      </div>
      <!-- Member form -->

      <!-- ChatRoom form -->
      <div id="chatRoomForm" class="info container">
        <div class="row">
          <div class="col">
            <span class="h3 mb-0">ChatRoom n</span>
          </div>
          <div class="col text-center">
            <button class="btn btn-outline-success">Enter</button>
            <button class="btn btn-outline-danger">Leave</button>
          </div>
        </div>
      </div>
      <!-- ChatRoom form -->

      <!-- Alert form -->
      <div id="alertForm" class="alert" role="alert" style="text-align: center; display: none;"></div>
      <!-- Alert form -->

      <!-- Group chat form -->
      <div id="groupChatForm" class="outer" style="display: none;">
        <div class="inner" style="display: inline ;"></div>
      </div>
      <!-- Group chat form -->

      <!-- modal form -->
      <div class="modal fade" id="modalForm" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel"></h1>
            </div>
            <div class="modal-body"></div>
            <div class="modal-footer">
              <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Confirm</button>
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
          </div>
        </div>
      </div>
    <!-- modal form -->

    <!-- toast form -->
    <div id="toastForm" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body"></div>
        <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
    <!-- toast form -->

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
      <script type="module" src="js/main.js"></script>
    </body>
</html>